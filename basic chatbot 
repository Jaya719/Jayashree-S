def simple_chatbot():
    print("ðŸ¤– Hello! I'm ChatBot. Type something to start a conversation.")
    print("Type 'bye' to exit.\n")

    while True:
        user_input = input("You: ").lower()

        if user_input == "hello":
            print("Bot: Hi!")
        elif user_input == "how are you":
            print("Bot: I'm fine, thanks!")
        elif user_input == "bye":
            print("Bot: Goodbye! ðŸ‘‹")
            break
        else:
            print("Bot: Sorry, I didn't understand that.")

# Run the chatbot
simple_chatbot()